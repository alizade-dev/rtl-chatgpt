{
  "manifest_version": 3,
  "name": "RTL for ChatGpt By @alizade_dev",
  "version": "1.0",
  "description": "Toggle RTL direction on chatGPT and change icon based on state.",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_icon": {
      "16": "icons/icon_ltr-128.png",
      "48": "icons/icon_ltr-128.png",
      "128": "icons/icon_ltr-128.png"
    }
  },
  "background": {
    "service_worker": "content.js"
  },
  "icons": {
    "16": "icons/icon_ltr-128.png",
    "48": "icons/icon_ltr-128.png",
    "128": "icons/icon_ltr-128.png"
  }
}